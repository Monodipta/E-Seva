<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_catalouge.AdminFragment.AdminDashFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user_cat"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:layout_marginLeft="55dp"
                    android:textSize="25sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:id="@+id/namehead" />
                <TextView
                    android:id="@+id/adname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monodipta Maity"
                    android:layout_marginLeft="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/namehead"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="-10dp"
                    android:src="@drawable/call2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:layout_marginLeft="55dp"
                    android:textSize="25sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:id="@+id/phnhead" />
                <TextView
                    android:id="@+id/adphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 9876543210"
                    android:layout_marginLeft="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/phnhead"
                    android:textSize="20sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/department" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/department"
                    android:layout_marginLeft="55dp"
                    android:textSize="25sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:id="@+id/depthead" />
                <TextView
                    android:id="@+id/addepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department's Name"
                    android:layout_marginLeft="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/depthead"
                    android:textSize="20sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/message2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/e_mail"
                    android:layout_marginLeft="55dp"
                    android:textSize="25sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:id="@+id/mailhead" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="monodiptomaity@gmail.com"
                    android:layout_marginLeft="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/mailhead"
                    android:textSize="20sp"
                    android:id="@+id/ademail"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_cat_shape"
                    android:layout_below="@+id/ademail"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>